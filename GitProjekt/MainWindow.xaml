        xmlns:local="clr-namespace:GitProjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox HorizontalAlignment="Left" Height="414" Header="Dodaj użytkownika" Margin="10,0,0,0" VerticalAlignment="Top" Width="328">
