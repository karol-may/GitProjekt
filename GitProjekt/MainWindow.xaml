                <Label Content="Data urodzenia:" HorizontalAlignment="Left" Margin="28,117,0,0" VerticalAlignment="Top" Height="24"/>
                <TextBox Grid.Column="1" HorizontalAlignment="Center" Margin="0,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                <TextBox Grid.Column="1" HorizontalAlignment="Center" Margin="0,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                <TextBox Grid.Column="1" HorizontalAlignment="Center" Margin="0,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            </Grid>
        </GroupBox>
        <Label x:Name="Test" Content="Label" HorizontalAlignment="Left" Margin="383,82,0,0" VerticalAlignment="Top" Height="162" Width="351"/>
    </Grid>
</Window>
